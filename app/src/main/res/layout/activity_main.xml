<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageViewTop"
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/calculator"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="16dp"
        tools:ignore="ContentDescription"/>

    <TextView
        android:id="@+id/textViewResult"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:background="@color/black"
        android:gravity="end|center_vertical"
        android:padding="16dp"
        android:text="0"
        android:textSize="40sp"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@+id/imageViewTop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="16dp"
        tools:ignore="HardcodedText"/>

    <Button
        android:id="@+id/buttonClear"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="4dp"
        android:backgroundTint="#9e9e9e"
        android:text="AC"
        android:textColor="@color/black"
        app:layout_constraintHeight_percent="0.1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textViewResult"
        app:layout_constraintWidth_percent="0.25"/>

    <Button
        android:id="@+id/buttonPlusMinusSign"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="4dp"
        android:backgroundTint="#9e9e9e"
        android:text="+/-"
        android:textColor="@color/black"
        app:layout_constraintHeight_percent="0.1"
        app:layout_constraintStart_toEndOf="@+id/buttonClear"
        app:layout_constraintTop_toBottomOf="@id/textViewResult"
        app:layout_constraintWidth_percent="0.25"/>

    <Button
        android:id="@+id/buttonPercentage"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="4dp"
        android:backgroundTint="#9e9e9e"
        android:text="%"
        android:textColor="@color/black"
        app:layout_constraintHeight_percent="0.1"
        app:layout_constraintStart_toEndOf="@+id/buttonPlusMinusSign"
        app:layout_constraintTop_toBottomOf="@id/textViewResult"
        app:layout_constraintWidth_percent="0.25"/>

    <Button
        android:id="@+id/buttonDivide"
        android:layout_width="80dp"
        android:layout_height="72dp"
        android:layout_margin="4dp"
        android:backgroundTint="#9e9e9e"
        android:text="/"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.1"
        app:layout_constraintStart_toEndOf="@+id/buttonPercentage"
        app:layout_constraintTop_toBottomOf="@id/textViewResult"
        app:layout_constraintWidth_percent="0.25"/>

    <Button
        android:id="@+id/button7"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="4dp"
        android:backgroundTint="#9e9e9e"
        android:text="7"
        android:textColor="@color/black"
        app:layout_constraintHeight_percent="0.1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/buttonClear"
        app:layout_constraintWidth_percent="0.25"/>

    <Button
        android:id="@+id/button8"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="4dp"
        android:backgroundTint="#9e9e9e"
        android:text="8"
        android:textColor="@color/black"
        app:layout_constraintHeight_percent="0.1"
        app:layout_constraintStart_toEndOf="@id/button7"
        app:layout_constraintTop_toBottomOf="@id/buttonClear"
        app:layout_constraintWidth_percent="0.25"/>

    <Button
        android:id="@+id/button9"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="4dp"
        android:backgroundTint="#9e9e9e"
        android:text="9"
        android:textColor="@color/black"
        app:layout_constraintHeight_percent="0.1"
        app:layout_constraintStart_toEndOf="@id/button8"
        app:layout_constraintTop_toBottomOf="@id/buttonClear"
        app:layout_constraintWidth_percent="0.25"/>

    <Button
        android:id="@+id/buttonMultiply"
        android:layout_width="80dp"
        android:layout_height="72dp"
        android:layout_margin="4dp"
        android:backgroundTint="#9e9e9e"
        android:text="*"
        android:textColor="@color/black"
        app:layout_constraintHeight_percent="0.1"
        app:layout_constraintStart_toEndOf="@id/button9"
        app:layout_constraintTop_toBottomOf="@id/buttonClear"
        app:layout_constraintWidth_percent="0.25"/>

    <Button
        android:id="@+id/button4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="4dp"
        android:backgroundTint="#9e9e9e"
        android:text="4"
        android:textColor="@color/black"
        app:layout_constraintHeight_percent="0.1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button7"
        app:layout_constraintWidth_percent="0.25"/>

    <Button
        android:id="@+id/button5"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="4dp"
        android:backgroundTint="#9e9e9e"
        android:text="5"
        android:textColor="@color/black"
        app:layout_constraintHeight_percent="0.1"
        app:layout_constraintStart_toEndOf="@id/button4"
        app:layout_constraintTop_toBottomOf="@id/button7"
        app:layout_constraintWidth_percent="0.25"/>

    <Button
        android:id="@+id/button6"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="4dp"
        android:backgroundTint="#9e9e9e"
        android:text="6"
        android:textColor="@color/black"
        app:layout_constraintHeight_percent="0.1"
        app:layout_constraintStart_toEndOf="@id/button5"
        app:layout_constraintTop_toBottomOf="@id/button7"
        app:layout_constraintWidth_percent="0.25"/>

    <Button
        android:id="@+id/buttonMinus"
        android:layout_width="80dp"
        android:layout_height="72dp"
        android:layout_margin="4dp"
        android:backgroundTint="#9e9e9e"
        android:text="-"
        android:textColor="@color/black"
        app:layout_constraintHeight_percent="0.1"
        app:layout_constraintStart_toEndOf="@id/button9"
        app:layout_constraintTop_toBottomOf="@id/button7"
        app:layout_constraintWidth_percent="0.25"/>

    <Button
        android:id="@+id/button1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="4dp"
        android:backgroundTint="#9e9e9e"
        android:text="1"
        android:textColor="@color/black"
        app:layout_constraintHeight_percent="0.1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button6"
        app:layout_constraintWidth_percent="0.25"/>

    <Button
        android:id="@+id/button2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="4dp"
        android:backgroundTint="#9e9e9e"
        android:text="2"
        android:textColor="@color/black"
        app:layout_constraintHeight_percent="0.1"
        app:layout_constraintStart_toEndOf="@id/button1"
        app:layout_constraintTop_toBottomOf="@id/button6"
        app:layout_constraintWidth_percent="0.25"/>

    <Button
        android:id="@+id/button3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="4dp"
        android:backgroundTint="#9e9e9e"
        android:text="3"
        android:textColor="@color/black"
        app:layout_constraintHeight_percent="0.1"
        app:layout_constraintStart_toEndOf="@id/button2"
        app:layout_constraintTop_toBottomOf="@id/button6"
        app:layout_constraintWidth_percent="0.25" />

    <Button
        android:id="@+id/buttonPlus"
        android:layout_width="80dp"
        android:layout_height="72dp"
        android:layout_margin="4dp"
        android:backgroundTint="#9e9e9e"
        android:text="+"
        android:textColor="@color/black"
        app:layout_constraintHeight_percent="0.1"
        app:layout_constraintStart_toEndOf="@id/button3"
        app:layout_constraintTop_toBottomOf="@id/button6"
        app:layout_constraintWidth_percent="0.25"/>

    <Button
        android:id="@+id/button0"
        android:layout_width="209dp"
        android:layout_height="75dp"
        android:layout_margin="4dp"
        android:backgroundTint="#9e9e9e"
        android:text="0"
        android:textColor="@color/black"
        app:layout_constraintHeight_percent="0.1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button1"
        app:layout_constraintWidth_percent="0.25"/>

    <Button
        android:id="@+id/buttonDot"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="4dp"
        android:backgroundTint="#9e9e9e"
        android:text="."
        android:textColor="@color/black"
        app:layout_constraintHeight_percent="0.1"
        app:layout_constraintStart_toEndOf="@id/button0"
        app:layout_constraintTop_toBottomOf="@id/button1"
        app:layout_constraintWidth_percent="0.25"/>

    <Button
        android:id="@+id/buttonEqual"
        android:layout_width="80dp"
        android:layout_height="72dp"
        android:layout_margin="4dp"
        android:backgroundTint="#9e9e9e"
        android:text="="
        android:textColor="@color/black"
        app:layout_constraintHeight_percent="0.1"
        app:layout_constraintStart_toEndOf="@id/buttonDot"
        app:layout_constraintTop_toBottomOf="@id/button1"
        app:layout_constraintWidth_percent="0.25"/>


</androidx.constraintlayout.widget.ConstraintLayout>